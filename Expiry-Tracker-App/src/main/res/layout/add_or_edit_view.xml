<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/cancel_remove_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_btn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/remove_btn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:text="Remove" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/enter_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cancel_remove_layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/enter_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:inputType="textAutoComplete"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/image_picker_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/enter_title_layout"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/item_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/choose_image_btn"
                    style="@android:style/Widget.Holo.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="Choose Image..." />

            </RelativeLayout>

            <TextView
                android:id="@+id/expiry_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_picker_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Enter Expiry Date:"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expiry_title_txt"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>

            <Button
                android:id="@+id/save_or_add_btn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_picker"
                android:text="Save / Add" />

        </RelativeLayout>
</ScrollView>
